import java.util.List;

public class VerificadorDeUsuarios {
    // Método para verificar credenciales del Administrador (el que ya tienes)
    public static boolean esAdministrador(String usuario, String contrasena) {
        String adminUsuario = "admin";
        String adminContrasena = "0000";

        return usuario.equals(adminUsuario) && contrasena.equals(adminContrasena);
    }
    
